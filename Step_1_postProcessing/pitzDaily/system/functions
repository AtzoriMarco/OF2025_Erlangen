FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      functions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// original function:
// #includeFunc patchAverage(patch=inlet, fields=(p U))

// add names
#includeFunc patchAverage(name=average_inlet, patch=inlet, fields=(p U))
#includeFunc patchAverage(name=average_outlet, patch=outlet, fields=(p U))

// modified from e.g. incompressibleFluid/planarPoiseuille
#includeFunc residuals(name=residuals, p, U, k, epsilon)

// from incompressibleFluid/motorBikeSteady (with dedicated dictionaries, including output control)
#includeFunc cutPlane
#includeFunc streamlines

// from drivaerFastback
#includeFunc patchSurface(name=surface_upper_p, patch=upperWall, fields=(p))
#includeFunc patchSurface(name=surface_lower_p, patch=upperWall, fields=(p))

// from venturiTube:
#includeFunc probes
(
    name=probes,
    points=
    (
        (0.05 0 0)
        (0.10 0 0)
        (0.15 0 0)
        (0.20 0 0)
    ),
    p, U
)

// from TJunction, require running createZones, with its own dictionary:
#includeFunc patchFlowRate(name=flowrate_inlet,patch=inlet)
#includeFunc faceZoneFlowRate(name=flowrate_nearOutlet,faceZone=nearOutlet)

// from T3A:
#includeFunc wallShearStress(executeAtStart=no)
#includeFunc graphUniform
(
    executeAtStart=no
    name=wallShearStressGraph,
    start=(0 -0.0254 0),
    end=(0.206 -0.0254 0),
    nPoints=100,
    axis=x,
    wallShearStress
)

// and it works for fields that are added with other functions!
#includeFunc patchSurface(executeAtStart=no,name=surface_wallShearStress, patch=lowerWall, fields=(wallShearStress))


// ************************************************************************* //
